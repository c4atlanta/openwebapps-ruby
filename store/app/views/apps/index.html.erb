<h2>Available Apps</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
  </tr>

<% @apps.each do |app| %>
  <tr>
    <td><%= app.name %></td>
    <td><%= app.description%></td>
    <td><%= link_to 'View Manifest', polymorphic_path(app, :format => :json) %></td>
  </tr>
<% end %>
</table>

